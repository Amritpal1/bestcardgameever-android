<?xml version="1.0" encoding="utf-8"?>
<TableLayout
android:id="@+id/table"
android:layout_width="fill_parent"
android:layout_height="fill_parent"
android:layout_weight="8"
android:orientation="vertical"
xmlns:android="http://schemas.android.com/apk/res/android" android:background="@drawable/risingtree">
<LinearLayout android:id="@+id/heading"
 android:layout_width="wrap_content"
  android:layout_height="wrap_content"
android:layout_weight="0">

  <TextView 
  android:id="@+id/headingText"
   android:text="@string/Heading" android:textColor="#ffffff" 
   android:layout_height="fill_parent" android:layout_width="fill_parent"/>
     
     
</LinearLayout>

<LinearLayout
android:id="@+id/topRow"
android:layout_width="fill_parent"
android:layout_height="wrap_content" android:layout_weight="0">

<TextView  
	android:id="@+id/o2Name"
    android:layout_width="wrap_content" 
    android:layout_height="wrap_content" 
    android:text="@string/Opponent2" android:gravity="top|left"/>
    
     <ImageView android:id="@+id/o2c1"
	 	android:layout_width="wrap_content"
  		android:layout_height="wrap_content" android:layout_gravity="center">
  	</ImageView>
     <ImageView android:id="@+id/o2c2"
	 	android:layout_width="wrap_content"
  		android:layout_height="wrap_content" android:layout_gravity="center">
  	</ImageView>
     <ImageView android:id="@+id/o2c3"
	 	android:layout_width="wrap_content"
  		android:layout_height="wrap_content" android:layout_gravity="center">
  	</ImageView>
     <ImageView android:id="@+id/o2c4"
	 	android:layout_width="wrap_content"
  		android:layout_height="wrap_content" android:layout_gravity="center">
  	</ImageView>
     <ImageView android:id="@+id/o2c5"
	 	android:layout_width="wrap_content"
  		android:layout_height="wrap_content" android:layout_gravity="center">
  	</ImageView>


</LinearLayout>
<TableRow
android:id="@+id/middleRow"
android:layout_width="fill_parent"
android:layout_height="fill_parent"
android:orientation="horizontal"
android:layout_weight="3"
android:layout_gravity="center_horizontal"
>
	<LinearLayout
	android:id="@+id/leftCol"
	android:orientation="vertical"
	
	
	android:layout_weight="1"
	android:layout_width="fill_parent" android:layout_height="wrap_content">
	<TextView
		android:id="@+id/o1Name"  
	    android:layout_width="wrap_content" 
	    android:layout_height="wrap_content" 
	    android:text="@string/Opponent1"
	    android:layout_gravity="bottom|center"/>
	
	<ImageView android:id="@+id/o1c1"
	 	android:layout_width="wrap_content"
  		android:layout_height="wrap_content">
  	</ImageView>
	<ImageView android:id="@+id/o1c2"
	 	android:layout_width="wrap_content"
  		android:layout_height="wrap_content">
  	</ImageView>
	<ImageView android:id="@+id/o1c3"
	 	android:layout_width="wrap_content"
  		android:layout_height="wrap_content">
  	</ImageView>
	<ImageView android:id="@+id/o1c4"
	 	android:layout_width="wrap_content"
  		android:layout_height="wrap_content">
  	</ImageView>
	<ImageView android:id="@+id/o1c5"
	 	android:layout_width="wrap_content"
  		android:layout_height="wrap_content">
  	</ImageView>
	
	</LinearLayout>
	
	<RelativeLayout
	android:id="@+id/center"
	android:layout_height="wrap_content"
	android:layout_gravity="center"
	android:layout_weight="2"
	android:layout_width="wrap_content" 

	>
	    	 
	    		<ImageView
	    			android:id="@+id/deck"
	    			android:layout_width="wrap_content"
					android:layout_height="wrap_content"
	    			

    			android:src="@drawable/deck" android:paddingRight="15px"/>
	    		
	
	<AbsoluteLayout
	android:id="@+id/cardsThrown"
	android:layout_height="wrap_content"
	android:layout_width="wrap_content"

	android:layout_toRightOf="@+id/deck">
	    		 
	    		<ImageView
	    			android:layout_width="72px"
					android:layout_height="96px"
	    			
	    			android:id="@+id/card5"
	    			android:layout_x="0px"
	    			android:layout_y="0px"
	    		/>
	    		<ImageView
	    			android:layout_width="72px"
					android:layout_height="96px"
	    			
	    			android:id="@+id/card4"
	    			android:layout_x="12px"
	    			android:layout_y="0px"
	    		/>
	    		<ImageView
	    			android:layout_width="72px"
					android:layout_height="96px"
	    			android:id="@+id/card3"
	    			android:layout_x="24px"
	    			android:layout_y="0px"
	    		/>
	    		<ImageView
	    			android:layout_width="72px"
					android:layout_height="96px"
	    			
	    			android:id="@+id/card2"
	    			android:layout_x="36px"
	    			android:layout_y="0px"
	    		/>
	    		<ImageView
	    			android:layout_width="72px"
					android:layout_height="96px"
						    			
	    			android:id="@+id/card1"
	    			android:layout_x="48px"
	    			android:layout_y="0px"
	    		/>
	    		
	    		 
	</AbsoluteLayout>
	</RelativeLayout>
	<LinearLayout
	android:id="@+id/rightCol"
	android:orientation="vertical"
	android:layout_weight="1"
	android:layout_width="fill_parent" android:layout_height="wrap_content">
	<TextView
		android:id="@+id/o3Name"  
	    android:layout_width="wrap_content" 
	    android:layout_height="wrap_content" 
	    android:text="@string/Opponent3"
	    />
	         <ImageView android:id="@+id/o3c1"
	 	android:layout_width="wrap_content"
  		android:layout_height="wrap_content">
  	</ImageView>
     <ImageView android:id="@+id/o3c2"
	 	android:layout_width="wrap_content"
  		android:layout_height="wrap_content">
  	</ImageView>
     <ImageView android:id="@+id/o3c3"
	 	android:layout_width="wrap_content"
  		android:layout_height="wrap_content">
  	</ImageView>
     <ImageView android:id="@+id/o3c4"
	 	android:layout_width="wrap_content"
  		android:layout_height="wrap_content">
  	</ImageView>
     <ImageView android:id="@+id/o3c5"
	 	android:layout_width="wrap_content"
  		android:layout_height="wrap_content">
  	</ImageView>
	    
	</LinearLayout>
</TableRow>
<LinearLayout
android:id="@+id/bottom"
android:layout_width="fill_parent"
android:gravity="center"
   android:layout_gravity="bottom" android:layout_height="wrap_content" android:layout_weight="1">
<TextView
	android:id="@+id/p1Name"  
    android:layout_width="wrap_content" 
    android:layout_height="wrap_content" 
    android:text="@string/Player"
    android:gravity="center_horizontal" android:layout_gravity="left|center_vertical"/>
    
    
	    		
<AbsoluteLayout 
android:id="@+id/p1cardscontainer" 
android:layout_gravity="center"
    android:layout_width="wrap_content" 
android:layout_height="wrap_content">
	    		
<ImageView android:id="@+id/p1c1"
 android:layout_gravity="bottom" 
 					android:layout_width="45px"
					android:layout_height="60px"
	    			android:layout_x="0px"
	    			android:layout_y="10px">
  </ImageView>
<ImageView android:id="@+id/p1c2"
 android:layout_gravity="bottom" 
  					android:layout_width="45px"
					android:layout_height="60px"
	    			android:layout_x="45px"
	    			android:layout_y="10px">
  </ImageView>
<ImageView android:id="@+id/p1c3"
 android:layout_gravity="bottom" 
  					android:layout_width="45px"
					android:layout_height="60px"
	    			android:layout_x="90px"
	    			android:layout_y="10px">
  </ImageView>
<ImageView android:id="@+id/p1c4"
 android:layout_gravity="bottom" 
  					android:layout_width="45px"
					android:layout_height="60px"
	    			android:layout_x="135px"
	    			android:layout_y="10px">
  </ImageView>
<ImageView android:id="@+id/p1c5"
 android:layout_gravity="bottom" 
  					android:layout_width="45px"
					android:layout_height="60px"
	    			android:layout_x="180px"
	    			android:layout_y="10px"
 >
  </ImageView>

</AbsoluteLayout>
	<LinearLayout android:id="@+id/ActionButtonContainer" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_gravity="right" android:orientation="vertical" android:clipChildren="true" android:gravity="top">

		<Button android:id="@+id/DropCards"
			android:layout_height="wrap_content"
			android:text="@string/DropSelected" 
			android:clickable="true" 
			android:layout_width="wrap_content"
			android:soundEffectsEnabled="true"
			android:gravity="center" 
			android:textScaleX="0.75" 
			android:layout_gravity="top">
		</Button>
		<Button android:layout_width="wrap_content" 
			android:layout_height="wrap_content" 
			android:text="@string/PerformYaniv" 
			android:id="@+id/PerformYaniv" 
			android:clickable="true" 
			android:layout_gravity="bottom" 
			android:gravity="center" android:textScaleX="0.75">
		</Button>
	</LinearLayout>
</LinearLayout>
</TableLayout>
